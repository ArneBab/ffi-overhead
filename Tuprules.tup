PROJECT_DIR = $(TUP_CWD)

OPT_FLAG = -O2

CFLAGS += -Wall -fPIC $(OPT_FLAG)
CXXFLAGS += -Wall -fPIC -std=c++14 $(OPT_FLAG)

LINK_FLAGS =

NAME = %d

CC = gcc

CXX = g++

# =====================================

!cc = |> $(CC) -c %f -o %o $(CFLAGS) |> %B.o

!cxx = |> $(CXX) -c %f -o %o $(CXXFLAGS) |> %B.o

!ar = |> ar crs %o %f |> lib$(NAME).a

!cc_exe = |> $(CC) -o %o $(OPT_FLAG) %f $(LINK_FLAGS) |> $(NAME)

!cxx_exe = |> $(CXX) -o %o $(OPT_FLAG) %f $(LINK_FLAGS) |> $(NAME)

!cc_shared = |> $(CC) -o %o -shared -Wl,--whole-archive %f -Wl,--no-whole-archive |> lib$(NAME).so

!cxx_shared = |> $(CXX) -o %o -shared -Wl,--whole-archive %f -Wl,--no-whole-archive |> lib$(NAME).so

