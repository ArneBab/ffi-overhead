PROJECT_DIR = $(TUP_CWD)

CFLAGS += -Wall -O2 -fPIC
CXXFLAGS += -Wall -O2 -fPIC

NAME = %d

# =====================================

!cc = |> gcc $(CFLAGS) -c %f -o %o |> %B.o

!cxx = |> g++ $(CXXFLAGS) -c %f -o %o |> %B.o

!ar = |> ar crs %o %f |> lib$(NAME).a

!exe = |> gcc %f -o %o |> $(NAME)

!shared = |> gcc -shared -o %o -Wl,--whole-archive %f -Wl,--no-whole-archive |> lib$(NAME).so

